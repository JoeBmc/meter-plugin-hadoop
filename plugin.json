{
  "name" : "TrueSight Pulse Hadoop Plugin",
  "version" : "0.9",
  "meterVersionRequired" : "4.5.0-763",
  "unsupportedPlatforms" : [ ],
  "tags" : "hadoop",
  "description": "Collects performance metrics for hadoop",
  "icon" : "icon.png",
  "command": "truesight-luvit init.lua",
  "postExtract": "",

  "metrics" : [
    "HADOOP_YARN_AVAILABLE_VCORES"
  ],
  "dashboards": [
    {
      "name": "Hdfs NameNode",
      "layout" : "d-w=2&d-h=4&d-pad=5&d-light=1&d-bg=none&d-g-VMWARE_SYSTEM_CPU_USAGE_AVERAGE=0-0-1-1&d-g-VMWARE_SYSTEM_NETWORK_PACKETS_RX_SUM=1-2-1-1-t&d-g-VMWARE_SYSTEM_NETWORK_PACKETS_TX_SUM=1-2-1-1-b&d-g-VMWARE_SYSTEM_CPU_USAGE_MAXIMUM=1-0-1-1&d-g-VMWARE_SYSTEM_MEMORY_ACTIVE_MAXIMUM=0-1-1-1&d-g-VMWARE_SYSTEM_MEMORY_CONSUMED_AVERAGE=1-1-1-1&d-g-VMWARE_SYSTEM_NETWORK_BYTES_RX_AVERAGE=0-2-1-1-t&d-g-VMWARE_SYSTEM_NETWORK_BYTES_TX_AVERAGE=0-2-1-1-b&d-g-VMWARE_SYSTEM_DISK_READ_AVERAGE=0-3-1-1&d-g-VMWARE_SYSTEM_DISK_WRITE_AVERAGE=1-3-1-1"
    }
  ],
  "paramArray": {
    "itemTitle": [
      "host"
    ],
    "schemaTitle": "hadoop"
  },
  "paramSchema": [
    {
      "title": "Host",
      "name": "host",
      "description": "The hadoop hostname",
      "type": "string",
      "default": "",
      "required" : true
    },
    {
      "title": "Polling Interval",
      "name": "pollInterval",
      "description": "The polling interval (in milliseconds) to call the hadopp performance metrics collector",
      "type": "integer",
      "default": 1000,
      "required": true
    }
  ]
}