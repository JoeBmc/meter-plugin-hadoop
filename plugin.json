{
  "name" : "TrueSight Pulse Hadoop Plugin",
  "version" : "0.9",
  "meterVersionRequired" : "4.5.0-763",
  "unsupportedPlatforms" : [ ],
  "tags" : "hadoop",
  "description": "Collects performance metrics for hadoop",
  "icon" : "icon.png",
  "command": "truesight-luvit init.lua",
  "postExtract": "",

  "metrics" : [
    "HADOOP_YARN_AVAILABLE_VCORES"
  ],
  "dashboards": [
    {
      "name": "Hdfs NameNode",
      "layout" : "d-w=3&d-h=5&d-pad=5&d-light=1&d-bg=none&d-g-HADOOP_NAMENODE_FS_CAPACITY_REMAINING=0-0-1-1&d-g-HADOOP_NAMENODE_FS_CORRUPTED_BLOCKS=1-0-1-1&d-g-HADOOP_NAMENODE_FS_MISSINGED_BLOCKS=2-0-1-1&d-g-HADOOP_NAMENODE_FS_BLOCKSED_TOTAL=0-1-1-1&d-g-HADOOP_NAMENODE_FS_FILES_TOTAL=1-1-1-1&d-g-HADOOP_NAMENODE_FS_BLOCKED_CAPACITY=2-1-1-1&d-g-HADOOP_NAMENODE_FS_UNDER_REPLICATED_BLOCKS=0-2-1-1&d-g-HADOOP_NAMENODE_FS_CAPACITYED_USED=1-2-1-1&d-g-HADOOP_NAMENODE_FS_TOTAL_LOAD=2-2-1-1&d-g-HADOOP_NAMENODE_FSSTATE_VOLUME_FAILURES_TOTAL=0-3-1-1&d-g-HADOOP_NAMENODE_FSSTATE_NUMBER_OF_LIVE_DATA_NODES=1-3-1-1&d-g-HADOOP_NAMENODE_FSSTATE_NUMBER_OF_DEAD_DATA_NODES=2-3-1-1&d-g-HADOOP_NAMENODE_FSSTATE_NUMBER_OF_STALE_DATA_NODES=0-4-1-1"
    }
  ],
  "paramArray": {
    "itemTitle": [
      "host"
    ],
    "schemaTitle": "hadoop"
  },
  "paramSchema": [
    {
      "title": "Host",
      "name": "host",
      "description": "The hadoop hostname",
      "type": "string",
      "default": "",
      "required" : true
    },
    {
      "title": "Polling Interval",
      "name": "pollInterval",
      "description": "The polling interval (in milliseconds) to call the hadopp performance metrics collector",
      "type": "integer",
      "default": 1000,
      "required": true
    }
  ]
}
